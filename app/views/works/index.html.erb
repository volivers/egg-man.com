<main>
  <section class="work">
    <div class="navbar-sidemark"></div>
    <div class="main-content">
      <div class="work-grid">
        <h1 class="section-title">latest work</h1>
        <div class="cards">

          <% if @works.any? %>
            <% @works.each do |work| %>
              <div class="card-category" style="">
                <div class="grid-overlay">
                  <h1 class="card-title"><%= work.title %></h1>
                  <%= link_to "Details", pages_home_path, {:class=>'btn btn-ghost-white'} %>
                </div>
              </div>
            <% end %>
          <% end %>

          <div class="card-category" style="background: url(https://images.unsplash.com/photo-1536338546286-31cc3e7348b4?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1502&q=80) no-repeat center center">
            <%= link_to "View more", pages_home_path, {:class=>'btn btn-ghost-white'} %>
          </div>
        </div>
      </div>
    </div>
  </section>
</main>