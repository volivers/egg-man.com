<main>
  <section class="work animate__animated animate__fadeIn">
    <div class="main-content">
      <div class="work-grid">
        <h1 class="section-title">latest work</h1>
        <div class="cards animate__animated animate__fadeInUp">
          <% if @works.any? %>

            <!-- Card 1 -->          
            <div class="card-category">
              <div class="grid-overlay">
                <h1 class="card-title"><%= @work_1.title %></h1>
                <!-- Button trigger modal -->
                <button type="button" class="btn btn-ghost-white" data-toggle="modal" data-target="#workModal_1">
                  Details
                </button>
              </div>
            </div>

            <!-- Card 2 -->          
            <div class="card-category">
              <div class="grid-overlay">
                <h1 class="card-title"><%= @work_2.title.downcase %></h1>
                <!-- Button trigger modal -->
                <button type="button" class="btn btn-ghost-white" data-toggle="modal" data-target="#workModal_2">
                  Details
                </button>
              </div>
            </div>

            <!-- Card 3 -->          
            <div class="card-category">
              <div class="grid-overlay">
                <h1 class="card-title"><%= @work_3.title.downcase %></h1>
                <!-- Button trigger modal -->
                <button type="button" class="btn btn-ghost-white" data-toggle="modal" data-target="#workModal_3">
                  Details
                </button>
              </div>
            </div>

            <!-- Card 4 -->          
            <div class="card-category">
              <div class="grid-overlay">
                <h1 class="card-title"><%= @work_4.title.downcase %></h1>
                <!-- Button trigger modal -->
                <button type="button" class="btn btn-ghost-white" data-toggle="modal" data-target="#workModal_4">
                  Details
                </button>
              </div>
            </div>

            <!-- Card 5 -->          
            <div class="card-category">
              <div class="grid-overlay">
                <h1 class="card-title"><%= @work_5.title.downcase %></h1>
                <!-- Button trigger modal -->
                <button type="button" class="btn btn-ghost-white" data-toggle="modal" data-target="#workModal_5">
                  Details
                </button>
              </div>
            </div>

          <% end %>
          <!-- Card 6 -->
          <div class="card-category">
            <button type="button" class="btn btn-ghost-white" data-toggle="modal" data-target="#workModal_6">
              View more
            </button>
          </div>
        </div>
      </div>
    </div>
  </section>
</main>
